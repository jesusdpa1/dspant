{
    "editor.rulers": [88],
    "editor.wordWrapColumn": 80,
    "editor.wordWrap": "wordWrapColumn", 
  
    "python.languageServer": "charliermarsh.ruff",
    "python.linting.enabled": true,
    "python.linting.ruffEnabled": true,
    "python.linting.lintOnSave": true,
    "ruff.nativeServer": "on",
  
    "[python]": {
      "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
      },
      "editor.formatOnSave": true, 
      "editor.defaultFormatter": "charliermarsh.ruff"
    },
  
    // Ensure your virtualenv Python is picked up correctly
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/Scripts/python.exe",
    "python.envFile": "${workspaceFolder}/.env",
    "python.terminal.executeInFileDir": true,
  
    // Rust with PyO3
    "rust-analyzer.cargo.extraEnv": {
      "PYO3_PYTHON": "${workspaceFolder}/.venv/Scripts/python.exe"
    },
  
    // Environment variables for integrated terminal
    "terminal.integrated.env.windows": {
      "PYO3_PYTHON": "${workspaceFolder}/.venv/Scripts/python.exe",
      "PYTHONSTARTUP": "${workspaceFolder}/.pythonrc"
    },
  }
  